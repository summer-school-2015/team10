<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/road" android:weightSum="1"
              tools:context=".game">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:id="@+id/game">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView" android:textSize="25dp" android:textColor="#FFFAFA"
                android:textIsSelectable="false"/>
    </FrameLayout>
</LinearLayout>