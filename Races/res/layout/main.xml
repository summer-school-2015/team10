<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bg" android:weightSum="1"
        >
    <Button
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:layout_weight="0.29" android:onClick="toGame"/>
    <Button
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/button2" android:layout_gravity="center_horizontal" android:layout_weight="0.27" android:onClick="toGame"/>/>
    <Button
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/button3" android:layout_gravity="center_horizontal" android:layout_weight="0.29" android:onClick="Exit_on_click"/>
</LinearLayout>

